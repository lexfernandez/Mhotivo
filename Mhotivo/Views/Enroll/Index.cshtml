@model IEnumerable<Mhotivo.Models.DisplayEnrollStudents>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

<h2>Estudiantes Registrados  </h2>
,
<a class="toEdit" data-toggle="modal" role="button" data-target="#EditModal" id="/Enroll/Add/"><span class="btn btn-small btn-primary active">Agregar Estudiante</span></a>

@if(!Model.Any())
{
    <div class="well well-large">
		<h4 class="blue">Tabla Vacia</h4>
		No hay estudiantes a mostrar.
	</div>
}
else
{
    <table class="table table-striped table-bordered table-hover" id="sample-table-1">
	    <thead>
		    <tr>
                <th>@Html.DisplayNameFor(model => model.UrlPicture)</th>
				<th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.AccountNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                <th>@Html.DisplayNameFor(model => model.Grade)</th>
                <th>@Html.DisplayNameFor(model => model.Section)</th>
                <th></th>
		    </tr>
	    </thead>
        <tbody>
        
            @foreach (var item in Model) {
                <tr>
                    <td data-id="Enroll/Details/@Html.DisplayFor(modelItem => item.EnrollID)" class="toDetails">
                        <a href="~/@Html.DisplayNameFor(model => model.UrlPicture)" data-rel="colorbox">
							<img alt="150x150" src="~/@Html.DisplayNameFor(model => model.UrlPicture)" />
							<div class="text">
							</div>
						</a>
                    </td>
				    <td data-id="Enroll/Details/@Html.DisplayFor(modelItem => item.EnrollID)" class="toDetails">@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td data-id="Enroll/Details/@Html.DisplayFor(modelItem => item.EnrollID)" class="toDetails">@Html.DisplayFor(modelItem => item.AccountNumber)</td>
                    <td data-id="Enroll/Details/@Html.DisplayFor(modelItem => item.EnrollID)" class="toDetails">@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td data-id="Enroll/Details/@Html.DisplayFor(modelItem => item.EnrollID)" class="toDetails">@Html.DisplayFor(modelItem => item.Grade)</td>
                    <td data-id="Enroll/Details/@Html.DisplayFor(modelItem => item.EnrollID)" class="toDetails">@Html.DisplayFor(modelItem => item.Section)</td>
                    <td>
                        <a class="toEdit" data-toggle="modal" role="button" data-target="#EditModal" id="/Enroll/Edit/@Html.DisplayFor(modelItem => item.EnrollID)"><i class="icon-edit bigger-120"></i></a>
                        <a class="toDelete" role="button" id="@Html.DisplayFor(modelItem => item.EnrollID)_Val"><i class="icon-trash bigger-120"></i></a>
                        @using (Html.BeginForm("Delete", "Enroll", new { id = Html.DisplayFor(modelItem => item.EnrollID) }, FormMethod.Post,
                            new { id = "Form_" + Html.DisplayFor(modelItem => item.EnrollID) + "_Val", style = "display: none" })) { }
                        <input type="hidden" id="@Html.DisplayFor(modelItem => item.EnrollID)_Val_Message"
                               value="¿Realmente desea eliminar al alumno @Html.DisplayFor(modelItem => item.FullName)?" />
                    </td>
                </tr>
            }
        </tbody>
    </table>   
    
}

<!-- Modal -->
<div tabindex="-1" class="modal hide fade" id="EditModal" style="display: none;" aria-hidden="true">
    <div id="body" class="modal-body">
        
    </div>
</div>